# ===========================================
# ðŸš€ DATVE BACKEND - PRODUCTION CONFIG
# ===========================================

# ===========================================
# APP CONFIGURATION
# ===========================================
APP_NAME="DatVe Backend"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_TIMEZONE=Asia/Ho_Chi_Minh
APP_LOCALE=vi
APP_FALLBACK_LOCALE=en

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=datve_backend
DB_USERNAME=your_username
DB_PASSWORD=your_password

# ===========================================
# QUEUE CONFIGURATION
# ===========================================
QUEUE_CONNECTION=database
DB_QUEUE_TABLE=jobs
DB_QUEUE=default
DB_QUEUE_RETRY_AFTER=90

# Redis Queue (Khuyáº¿n nghá»‹ cho production)
# QUEUE_CONNECTION=redis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379
# REDIS_DB=0

# ===========================================
# MAIL CONFIGURATION
# ===========================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# CACHE CONFIGURATION
# ===========================================
CACHE_DRIVER=file
# CACHE_DRIVER=redis (Khuyáº¿n nghá»‹ cho production)

# ===========================================
# SESSION CONFIGURATION
# ===========================================
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_DOMAIN=your-domain.com
SESSION_SECURE_COOKIE=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=your-jwt-secret-key
JWT_TTL=60
JWT_REFRESH_TTL=20160

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
SANCTUM_STATEFUL_DOMAINS=your-domain.com
SESSION_DOMAIN=your-domain.com

# ===========================================
# FILE SYSTEM CONFIGURATION
# ===========================================
FILESYSTEM_DISK=local

# ===========================================
# BROADCASTING CONFIGURATION
# ===========================================
BROADCAST_DRIVER=log

# ===========================================
# CUSTOM CONFIGURATION
# ===========================================
# Birthday Coupon System
BIRTHDAY_COUPON_ENABLED=true
BIRTHDAY_COUPON_TIME=09:00
BIRTHDAY_COUPON_RETRY_ATTEMPTS=3
BIRTHDAY_COUPON_TIMEOUT=120

# Security Settings
SECURITY_SCAN_ENABLED=true
SECURITY_MAX_LOGIN_ATTEMPTS=5
SECURITY_LOCKOUT_DURATION=15
